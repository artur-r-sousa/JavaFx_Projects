               </children>
            </GridPane>
            <Label layoutX="30.0" layoutY="25.0" text="Creating New Account" />
            <Button fx:id="btConfirm" layoutX="267.0" layoutY="277.0" mnemonicParsing="false" onAction="#onConfirmAction" text="Confirm" />
